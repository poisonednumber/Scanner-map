# ============================================
# SCANNER-MAP CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]
# ============================================

#################################################################
##                    SERVER SETTINGS                          ##
#################################################################

# [REQUIRED] Port for the web interface
WEBSERVER_PORT=3001

# [REQUIRED] Port for incoming SDRTrunk/TrunkRecorder uploads
BOT_PORT=3306

# [REQUIRED] Public domain/IP for audio playback links
PUBLIC_DOMAIN=localhost

# Timezone for logging
TIMEZONE=US/Eastern

#################################################################
##                    DISCORD BOT (Optional)                   ##
#################################################################

ENABLE_DISCORD=false
DISCORD_TOKEN=
CLIENT_ID=

#################################################################
##                    AUTHENTICATION                           ##
#################################################################

ENABLE_AUTH=false
WEBSERVER_PASSWORD=changeme
SESSION_DURATION_DAYS=7
MAX_SESSIONS_PER_USER=5
API_KEY_FILE=data/apikeys.json

#################################################################
##                    AI PROVIDER [REQUIRED]                   ##
#################################################################

# Options: 'ollama' (local/free) or 'openai' (paid)
AI_PROVIDER=ollama

# Ollama Settings
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

SUMMARY_LOOKBACK_HOURS=1
ASK_AI_LOOKBACK_HOURS=8

#################################################################
##                    TRANSCRIPTION [REQUIRED]                 ##
#################################################################

# Options: 'local', 'remote', 'openai', 'icad'
TRANSCRIPTION_MODE=local
TRANSCRIPTION_DEVICE=cpu

FASTER_WHISPER_SERVER_URL=http://localhost:8000
WHISPER_MODEL=large-v3

OPENAI_TRANSCRIPTION_MODEL=whisper-1
OPENAI_TRANSCRIPTION_TEMPERATURE=0.0

ICAD_URL=http://localhost:9912
ICAD_PROFILE=tiny
ICAD_API_KEY=

MAX_CONCURRENT_TRANSCRIPTIONS=2
AUTO_UPDATE_PYTHON_PACKAGES=true

#################################################################
##                    GEOCODING                                ##
#################################################################

GEOCODING_PROVIDER=nominatim
LOCATIONIQ_API_KEY=
GOOGLE_MAPS_API_KEY=

GEOCODING_STATE=MD
GEOCODING_CITY=Baltimore
GEOCODING_COUNTRY=US
GEOCODING_TARGET_COUNTIES=Baltimore County

TARGET_CITIES_LIST=Baltimore,Towson

#################################################################
##                    TALK GROUP MAPPING                       ##
#################################################################

ENABLE_MAPPED_TALK_GROUPS=true
MAPPED_TALK_GROUPS=1001,1002

# TALK_GROUP_1001=Your location description

#################################################################
##                    STORAGE                                  ##
#################################################################

STORAGE_MODE=local
S3_ENDPOINT=
S3_BUCKET_NAME=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

#################################################################
##                    TWO-TONE DETECTION (Optional)            ##
#################################################################

ENABLE_TWO_TONE_MODE=false
TWO_TONE_TALK_GROUPS=
TWO_TONE_QUEUE_SIZE=1
TONE_DETECTION_TYPE=auto
